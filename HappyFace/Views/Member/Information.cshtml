@model PodBeeMedia.Models.InformationModel
@{
    ViewBag.Title = LanguageHelper.GetValue("PageInformationTitle");
}
<div class="row row--grid">
    <!-- breadcrumb -->
    <div class="col-12">
        <ul class="breadcrumb">
            <li class="breadcrumb__item"><a href="@(LanguageHelper.CurrentLanguage == LanguageHelper.DefaultLanguage ? "/" : "/" + LanguageHelper.CurrentLanguage)">@LanguageHelper.GetValue("HomePage")</a></li>
            <li class="breadcrumb__item breadcrumb__item--active">@LanguageHelper.GetValue("PageInformationTitle")</li>
        </ul>
    </div>
    <!-- end breadcrumb -->
    <!-- sign in -->
    <div class="col-12">
        <div class="sign">
            <div class="row justify-content-center sign__content">
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <!-- authorization form -->
                    <div class="step">
                        @if (Model.Type == "NeedActivation")
                        {
                            <h3 class="text-white">
                                @LanguageHelper.GetValue("PageInformationNeedActicationTitle")
                            </h3>
                            <p class="step__text">@LanguageHelper.GetValue("PageInformationNeedActicationText")</p>
                            <p class="step__text">@LanguageHelper.GetValue("PageHomeRouteText")</p>
                        }
                        else
                        {
                            <h3 class="text-white">
                                @LanguageHelper.GetValue("PageInformationInActiveTitle")
                            </h3>
                            <p class="step__text">@LanguageHelper.GetValue("PageInformationInActiveText")</p>
                            <p class="step__text">@LanguageHelper.GetValue("PageInformationCheckMailBoxText")</p>
                        }
                        <a href="@(LanguageHelper.CurrentLanguage == LanguageHelper.DefaultLanguage ? "/" : "/" + LanguageHelper.CurrentLanguage)" class="sign__btn">
                            @LanguageHelper.GetValue("ButtonClickHere")
                        </a>
                    </div>
                    <!-- end authorization form -->
                </div>
            </div>
        </div>
    </div>
    <!-- end sign in -->
</div>