@if (Model.LatestEpisodes.Count > 0)
{
    string langUrl = (LanguageHelper.CurrentLanguage == LanguageHelper.DefaultLanguage ? "/" : "/" + LanguageHelper.CurrentLanguage + "/") + LanguageHelper.GetValue("UrlTypePodcast");
    <!-- podcasts -->
    <section class="row row--grid">
        <!-- title -->
        <div class="col-12">
            <div class="main__title">
                <h2>@LanguageHelper.GetValue("PageLatestEpisodesTitle")</h2>
                <a href="/@LanguageHelper.GetValue("UrlTypeLatestEpisode")" class="main__link">@LanguageHelper.GetValue("SeeAll") <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" /></svg></a>
            </div>
        </div>
        <!-- end title -->
        <div class="col-12">
            <div class="main__carousel-wrap">
                <div class="main__carousel main__carousel--episodes owl-carousel" id="episodes">
                    @foreach (var episode in Model.LatestEpisodes.OrderByDescending(e => e.UpdateDate))
                    {
                        <div class="event" data-bg="@(!string.IsNullOrEmpty(episode.Thumbnail) ? episode.Thumbnail : "img/events/event1.jpg")">
                            <span class="event__date">@episode.UpdateDate.ToLongDateString()</span>
                            <h3 class="event__title">
                                <a href="@langUrl/@episode.Url" title="@episode.Title">@episode.Title</a>
                            </h3>
                            @if (!string.IsNullOrEmpty(episode.IFrame))
                            {
                                <p class="event__address latest-episode" data-js="latest-episode" data-iframe="@episode.IFrame">
                                    <svg class="mr-1" role="presentation" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                        <path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z"></path>
                                    </svg>
                                    @episode.Description
                                </p>
                            }
                            else
                            {
                                <p class="event__address">@episode.Description</p>
                            }
                        </div>
                    }
                </div>
                <button class="main__nav main__nav--prev" data-nav="#episodes" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z" />
                    </svg>
                </button>
                <button class="main__nav main__nav--next" data-nav="#episodes" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" />
                    </svg>
                </button>
            </div>
        </div>
    </section>
    if (Model.LatestEpisodes.Any(e => !string.IsNullOrEmpty(e.IFrame)))
    {
        <div class="position-fixed w-100 overflow-hidden" id="latest-episode-player">
            <span class="position-absolute latest-episode-close" data-js="latest-episode-close">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M13.41,12l6.3-6.29a1,1,0,1,0-1.42-1.42L12,10.59,5.71,4.29A1,1,0,0,0,4.29,5.71L10.59,12l-6.3,6.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0L12,13.41l6.29,6.3a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42Z"></path>
                </svg>
            </span>
            <iframe width="100%" height="220" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" data-js="latest-episode-player"></iframe>
        </div>
    }
    <!-- end podcasts -->
}
