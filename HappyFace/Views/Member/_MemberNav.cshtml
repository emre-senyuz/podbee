@model MemberModel
<div class="profile">
    <div class="profile__user">
        <div class="profile__meta">
            <h3 class="text-capitalize">@Model.Name.ToLower() @Model.Surname.ToLower()</h3>
            <span>ID: @Model.ID</span>
        </div>
    </div>

    <!-- tabs nav -->
    <ul class="profile__tabs" id="profile__tabs">
        <li class="nav-item">
            <a class="nav-link" href="@LanguageMethods.GetLanguageUrl("UrlTypeMember", LanguageHelper.GetValue("UrlTypeProfile"))" data-target="profile">
                @LanguageHelper.GetValue("PageProfileTitle")
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@LanguageMethods.GetLanguageUrl("UrlTypeMember", LanguageHelper.GetValue("UrlTypePersonelInformation"))" data-target="personel-information">
                @LanguageHelper.GetValue("PagePersonelInformationTitle")
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@LanguageMethods.GetLanguageUrl("UrlTypeMember", LanguageHelper.GetValue("UrlTypeChangePassword"))" data-target="change-password">
                @LanguageHelper.GetValue("PageChangePasswordTitle")
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@LanguageMethods.GetLanguageUrl("UrlTypeMember", LanguageHelper.GetValue("UrlTypeComments"))" data-target="comments">
                @LanguageHelper.GetValue("PageCommentsTitle")
            </a>
        </li>
    </ul>
    <!-- end tabs nav -->

    <a href="/logout" class="profile__logout">
        <span>@LanguageHelper.GetValue("LinkSignOut")</span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M4,12a1,1,0,0,0,1,1h7.59l-2.3,2.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l4-4a1,1,0,0,0,.21-.33,1,1,0,0,0,0-.76,1,1,0,0,0-.21-.33l-4-4a1,1,0,1,0-1.42,1.42L12.59,11H5A1,1,0,0,0,4,12ZM17,2H7A3,3,0,0,0,4,5V8A1,1,0,0,0,6,8V5A1,1,0,0,1,7,4H17a1,1,0,0,1,1,1V19a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V16a1,1,0,0,0-2,0v3a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V5A3,3,0,0,0,17,2Z" /></svg>
    </a>
</div>
